{
  "root": true,
  "env": {
    "browser": true,
    "es2020": true,
    "webextensions": true
  },
  "extends": ["eslint:recommended"],
  "ignorePatterns": ["dist", ".eslintrc.json"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-unused-vars": "off",
    "no-console": "off",
    "no-undef": "off"
  }
}